/**
 * Arquivo XML de layout representando um ConstraintLayout que será o responsável por exibir informações sobre um grupo que será posteriormente apresentado no app.
 *
 * Este layout consiste basicamente de elementos presentes em um TextView para exibir o nome do grupo já definido, o mesmo contendo uma lista de alunos
 * e seus respectivos IDs.
 *
 */


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- TextView para exibir o nome do grupo -->

    <TextView
        android:id="@+id/nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Grupo 1" />

    <!-- TextView para exibir o nome do grupo -->

    <TextView
        android:id="@+id/alunos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nome"
        tools:text="Gabriel, Dayane, Vinicios e Vinicius" />

    <!-- TextView para exibir o nome do grupo -->

    <TextView
        android:id="@+id/rms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alunos"
        tools:text="94841, 96067, 93018, 96108" />

</androidx.constraintlayout.widget.ConstraintLayout>
